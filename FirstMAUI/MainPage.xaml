<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FirstMAUI.MainPage">

    <StackLayout>
        <Slider x:Name="SizeSlider" Minimum="0" Maximum="100" />
        <Entry x:Name="NameEntry" Placeholder="Enter Name" />
        <Picker x:Name="TypePicker" Title="Select Type">
            <Picker.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                    <x:String>Droïde de protocole</x:String>
                    <x:String>Droïde astromécane</x:String>
                </x:Array>
            </Picker.ItemsSource>
        </Picker>
        <Button Text="Add Robot" Clicked="AddRobotToList" />
        <ListView x:Name="RobotListView">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Name}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>

</ContentPage>
        

